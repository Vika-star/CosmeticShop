@model CosmeticShop.Models.Products.ProductContainer
@{
    ViewData["Title"] = "Details";
}

<h1>Товар</h1>

<div>
    <h4>ProductContainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>В наличии:</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountProducts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Name)
        </dd>

        <table>
            <tr>
                <th>Название</th>
                <th>Картинка</th>
            </tr>
            @foreach (var item in Model.ProductPictures.Pictures)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.Raw("<img style='width:250px; height:250px;' src=\"data:image/jpeg;base64,"
                    + Convert.ToBase64String(item.ByteImage) + "\" />")
                    </td>
                </tr>
            }
        </table>
    </dl>
</div>
<div>
    <form asp-controller="Orders" asp-action="Add" method="POST">
        <input type="number" name="productId" value="@Model.Id" hidden>
        
        <label for="count">Количество</label>
        <input type="number" name="count">
        
        <label for="add-to-order">Добавить в корзину</label>
        <input type="submit" name="add-to-order" value="">
    </form>
    @* <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> *@
</div>
